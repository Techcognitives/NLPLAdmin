<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_border_small"
    android:backgroundTint="@color/white"
    android:layout_gravity="center"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:scrollbars="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/dialog_address_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personal_details_buttons_de_active"
        android:backgroundTint="@color/button_blue"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Address"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dialog_spinner_bind_constrain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_spinner_bind_constrain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/dialog_spinner_bind_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_address_title">

        <TextView
            android:id="@+id/dialog_address_current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:drawableStart="@drawable/google_location_small"
            android:onClick="onClickGetCurrentLocationAddress"
            android:text="Get Current Location"
            android:textColor="@color/button_blue"
            android:textSize="14sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/dialog_address_address_edit_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/dialog_address_address_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:hint="@string/address"
            android:inputType="textMultiLine"
            android:lines="3"

            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/dialog_address_state_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_address_current_location" />

        <EditText
            android:id="@+id/dialog_address_pin_code_edit_text"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:hint="@string/pin_code"
            android:inputType="number"
            android:maxLength="6"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_address_state_text_view"
            app:layout_constraintEnd_toStartOf="@+id/dialog_address_state_text_view"
            app:layout_constraintStart_toStartOf="@+id/dialog_address_address_edit_text"
            app:layout_constraintTop_toTopOf="@+id/dialog_address_state_text_view" />

        <TextView
            android:id="@+id/dialog_address_state_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edit_text_border"
            android:hint="@string/select_state"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="25dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dialog_address_city_text_view"
            app:layout_constraintStart_toEndOf="@+id/dialog_address_pin_code_edit_text"
            app:layout_constraintTop_toBottomOf="@+id/dialog_address_address_edit_text" />

        <TextView
            android:id="@+id/dialog_address_city_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:hint="@string/select_city"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="25dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_address_state_text_view"
            app:layout_constraintEnd_toEndOf="@+id/dialog_address_address_edit_text"
            app:layout_constraintStart_toEndOf="@+id/dialog_address_state_text_view"
            app:layout_constraintTop_toTopOf="@+id/dialog_address_state_text_view" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_down"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_address_state_text_view"
            app:layout_constraintEnd_toEndOf="@+id/dialog_address_state_text_view"
            app:layout_constraintTop_toTopOf="@+id/dialog_address_state_text_view" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_down"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_address_city_text_view"
            app:layout_constraintEnd_toEndOf="@+id/dialog_address_city_text_view"
            app:layout_constraintTop_toTopOf="@+id/dialog_address_city_text_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/dialog_address_ok_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/button_de_active"
        android:onClick="onClickOkAddressDetails"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="OK"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_spinner_bind_cancel"
        app:layout_constraintEnd_toStartOf="@+id/dialog_spinner_bind_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_spinner_bind_cancel" />

    <TextView
        android:id="@+id/dialog_spinner_bind_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_active"
        android:backgroundTint="@color/redDark"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:onClick="onClickCancelAddressDetails"
        android:text="Cancel"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_address_ok_button"
        app:layout_constraintTop_toBottomOf="@+id/dialog_spinner_bind_constrain" />

</androidx.constraintlayout.widget.ConstraintLayout>