<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@drawable/all_rounded_small"
    android:backgroundTint="@color/white">

    <TextView
        android:id="@+id/dialog_driver_truck_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personal_details_buttons_active"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Truck Details"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dialog_driver_truck_details_vehicle_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_driver_truck_details_reassign_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/button_active"
        android:onClick="onClickReAssignTruck"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Reassign Truck"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_driver_truck_details_ok_button"
        app:layout_constraintEnd_toStartOf="@+id/dialog_driver_truck_details_ok_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_driver_truck_details_ok_button" />

    <TextView
        android:id="@+id/dialog_driver_truck_details_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_active"
        android:onClick="onClickCloseDialogDriverBankDetails"
        android:paddingStart="40dp"
        android:paddingTop="5dp"
        android:paddingEnd="40dp"
        android:paddingBottom="5dp"
        android:text="OK"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_driver_truck_details_reassign_button"
        app:layout_constraintTop_toBottomOf="@+id/dialog_driver_truck_details_rc_book_preview" />

    <TextView
        android:id="@+id/dialog_driver_truck_details_vehicle_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="3dp"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/dialog_driver_truck_details_vehicle_model"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_driver_truck_details_title" />

    <TextView
        android:id="@+id/dialog_driver_truck_details_vehicle_model"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="3dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/dialog_driver_truck_details_capacity"
        app:layout_constraintEnd_toStartOf="@+id/dialog_driver_truck_details_title_feet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_driver_truck_details_vehicle_number" />

    <TextView
        android:id="@+id/dialog_driver_truck_details_title_feet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="3dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_driver_truck_details_vehicle_model"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_driver_truck_details_vehicle_model"
        app:layout_constraintTop_toTopOf="@+id/dialog_driver_truck_details_vehicle_model" />

    <TextView
        android:id="@+id/dialog_driver_truck_details_capacity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="3dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/dialog_driver_truck_details_rc_book_preview"
        app:layout_constraintEnd_toStartOf="@+id/dialog_driver_truck_details_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_driver_truck_details_vehicle_model" />

    <TextView
        android:id="@+id/dialog_driver_truck_details_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="3dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_driver_truck_details_capacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_driver_truck_details_capacity"
        app:layout_constraintTop_toTopOf="@+id/dialog_driver_truck_details_capacity" />

    <TextView
        android:id="@+id/dialog_driver_truck_details_insurance_preview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:drawableStart="@drawable/ic_preview"
        android:onClick="onClickPreviewInsuranceAssigned"
        android:gravity="center"
        android:text="Insurance"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_driver_truck_details_rc_book_preview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_driver_truck_details_rc_book_preview"
        app:layout_constraintTop_toTopOf="@+id/dialog_driver_truck_details_rc_book_preview"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/dialog_driver_truck_details_rc_book_preview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="4dp"
        android:onClick="onClickPreviewRcBookAssigned"
        android:drawableStart="@drawable/ic_preview"
        android:gravity="center"
        android:text="RC Book"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dialog_driver_truck_details_ok_button"
        app:layout_constraintEnd_toStartOf="@+id/dialog_driver_truck_details_insurance_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_driver_truck_details_capacity"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/dialog_driver_truck_details_label_add_driver_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Please add a Truck"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/dialog_driver_truck_details_reassign_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_driver_truck_details_title" />
</androidx.constraintlayout.widget.ConstraintLayout>