<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_border"
    android:layout_margin="5dp"
    android:paddingBottom="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_truck_title_constrain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/personal_details_buttons_active"
        app:layout_constraintBottom_toTopOf="@+id/my_truck_list_truck_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/my_truck_list_vehicle_number_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="TextView"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/my_truck_list_edit_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/my_truck_list_edit_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_edit_small"
            android:drawableTint="@color/white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/my_truck_list_vehicle_number_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/my_truck_list_vehicle_number_text_view"
            app:layout_constraintTop_toTopOf="@+id/my_truck_list_vehicle_number_text_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/my_truck_list_preview_rc_book_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:drawableStart="@drawable/ic_preview"
        android:gravity="center"
        android:text="RC Book"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/my_truck_list_preview_insurance_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_truck_list_capacity"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/my_truck_list_preview_insurance_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_preview"
        android:gravity="center"
        android:text="Insurance"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/my_truck_list_preview_rc_book_text_view"
        app:layout_constraintEnd_toStartOf="@+id/my_truck_list_driver_details"
        app:layout_constraintStart_toEndOf="@+id/my_truck_list_preview_rc_book_text_view"
        app:layout_constraintTop_toTopOf="@+id/my_truck_list_preview_rc_book_text_view"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/my_truck_list_driver_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:drawableStart="@drawable/ic_preview"
        android:gravity="center"
        android:text="Driver"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/my_truck_list_preview_insurance_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/my_truck_list_preview_insurance_text_view"
        app:layout_constraintTop_toTopOf="@+id/my_truck_list_preview_insurance_text_view"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/my_truck_list_vehicle_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="Vehicle Type"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/my_truck_list_capacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/my_truck_list_capacity"
        app:layout_constraintTop_toTopOf="@+id/my_truck_list_capacity" />

    <TextView
        android:id="@+id/my_truck_list_capacity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="Capacity"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/my_truck_list_preview_rc_book_text_view"
        app:layout_constraintEnd_toStartOf="@+id/my_truck_list_vehicle_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_truck_list_truck_type" />

    <TextView
        android:id="@+id/my_truck_list_ft"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="Feet"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/my_truck_list_truck_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/my_truck_list_truck_type"
        app:layout_constraintTop_toTopOf="@+id/my_truck_list_truck_type" />

    <TextView
        android:id="@+id/my_truck_list_truck_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Truck Type"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/my_truck_list_capacity"
        app:layout_constraintEnd_toStartOf="@+id/my_truck_list_ft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_truck_title_constrain" />
</androidx.constraintlayout.widget.ConstraintLayout>